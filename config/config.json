{
	"ActivityDB": "data/activitydb.json",

	"Limits": {
		"MaxAxis": 8192,
		"MaxPixels": 41943040,
		"MaxRenderRequests": 16,
		"MaxTileRequests": 128
	},

	"LocationDB": "data/locations.geodb",
	"MapServer": "",
	"MapCache": "data/tile/osm-${z}-${x}-${y}.png",
	"SessionExpiry": "2h",
	"UseMap": false,
	"UserDB": "data/userdb.json",

	"WebServer": {
		"Name": "location-visualizer/1.2.1",
		"Port": "8080",
		"TLSDisabled": false,
		"TLSPort": "8443",
		"TLSPrivateKey": "keys/private.pem",
		"TLSPublicKey": "keys/public.pem",
		"WebRoot": "webroot/",
		"Index": "/index.xhtml",

		"MimeTypes": {
			"css": "text/css; charset=utf-8",
			"js": "text/javascript; charset=utf-8",
			"json": "application/json; charset=utf-8",
			"png": "image/png",
			"svg": "image/svg+xml; charset=utf-8",
			"txt": "text/plain; charset=utf-8",
			"webm": "video/webm",
			"xhtml": "application/xhtml+xml; charset=utf-8",
			"xml": "application/xml; charset=utf-8"
		},

		"DefaultMime": "application/octet-stream",
		"ErrorMime": "text/plain; charset=utf-8",

		"Timeouts": {

			"HTTP": {
				"Header": 5,
				"Read": 10,
				"Write": 30,
				"Idle": 60
			},

			"TLS": {
				"Header": 5,
				"Read": 10,
				"Write": 30,
				"Idle": 60
			}

		}

	}

}

